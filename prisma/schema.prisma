datasource db {
  provider = "postgresql"
  // MODIFICATION START
  // Adicionado de volta para compatibilidade com a CLI do Prisma v5.17.0
  url      = env("DATABASE_URL")
  // MODIFICATION END
}

generator client {
  provider = "prisma-client-js"
}

// ===============================================
//               MODELOS DA APLICAÇÃO
// ===============================================

// Modelo para o Usuário - simplificado para o nosso escopo inicial.
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  categories Category[]
  tasks      Task[]
}

// Modelo para as Categorias de tarefas
model Category {
  id        String   @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@unique([name, userId]) // Garante que um usuário não pode ter duas categorias com o mesmo nome
}

// Modelo para as Tarefas
model Task {
  id          String     @id @default(cuid())
  description String
  date        DateTime
  status      TaskStatus @default(PENDING)
  userId      String
  categoryId  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relações
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}

// Enum para o status da tarefa.
enum TaskStatus {
  PENDING
  COMPLETED
}